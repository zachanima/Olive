<%# TODO: Remove the remote logic. %>
<%= form_for @page, remote: @page.new_record? ? false : true do |f| %>
  <ol class="fields">
    <li>
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: 'Title'  %>
    </li>
    <li>
      <%= f.label :text %>
      <%= f.text_area :text, placeholder: 'Text' %>
    </li>
    <li>
      <%= image_tag @page.image.url if @page.image? %>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </li>
  </ol>

  <ol class="actions">
    <li><%= f.submit %></li>
  </ol>
<% end %>
