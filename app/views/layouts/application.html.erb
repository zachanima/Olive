<!DOCTYPE html>
<html>
  <head>
    <title><%= @page.title if @page %></title>
    <%= stylesheet_link_tag    'application' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    
    <div id="notice">
      <%= flash[:notice] %>
    </div>

    <div id="header">
      <div>
        <%= link_to @site.title, root_url %>
        <span><%= @site.subtitle %></span>
      </div>
    </div>

    <div id="nav">
      <ol id="pages">
        <% @pages.each do |page| %>
          <%= content_tag :li, link_to(page.title, page), id: dom_id(page) %>
        <% end %>
      </ol>
      <ol>
        <li><%= link_to '+ Page', new_page_path, class: 'new' %></li>
      </ol>
      <ol>
        <li>
          <span>Links</span>
          <ol id="links">
            <% @links.each do |link| %>
              <%= content_tag :li, link_to(link.title, edit_link_path(link), class: 'edit'), id: dom_id(link) %>
            <% end %>
          </ol>
          <ol>
            <li><%= link_to '+ Link', new_link_path, class: 'new' %></li>
          </ol>
        </li>
      </ol>
      <div id="countdown">
        <span>0</span> <%= @site.depart_text %>
      </div>
    </div>

    <div id="content">
      <%= yield %>
    </div>

  </body>
</html>
